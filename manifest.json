{
  "manifest_version": 3,
  "name": "Selection GPT",
  "description": "Select text and give GPT generated summary, review quiz, or answer to custom question.",
  "version": "1.0",
  "icons": {
    "128": "/icons/main-icon.png"
  },
  "action":{
    "default_popup": "/views/index.html"
  },
  "background":{
    "service_worker": "/scripts/background.js"
  },
  "permissions": ["contextMenus", "sidePanel", "storage", "tabs"]
}

